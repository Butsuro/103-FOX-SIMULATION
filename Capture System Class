class captureSystem:
    def __init__(self, length, width, height, pos):
        self.length = length
        self.width = width
        self.width = height
        self.pos = np.array(pos)
        self.totalCaptures = 0
        self.correctCaptures = 0
        self.capturePercent = 0
        
